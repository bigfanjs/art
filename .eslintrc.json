{
  "extends": ["react-app", "prettier"],
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es2017": true
  },
  "plugins": ["import"],
  "globals": {
    "Sentry": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"],
        "paths": ["./src"]
      }
    }
  },
  "rules": {
    "eqeqeq": 2,
    "no-nested-ternary": 2,
    "no-shadow": 2,
    "no-param-reassign": 2,
    "no-unused-expressions": [
      2,
      {
        "allowShortCircuit": false,
        "allowTernary": false,
        "allowTaggedTemplates": false
      }
    ],
    "no-unused-vars": 2,
    "no-use-before-define": 2,
    "prefer-template": 2,
    "react/jsx-key": 2,
    "react/no-array-index-key": 1,
    "import/no-duplicates": 2,
    "import/no-extraneous-dependencies": 2,
    "import/no-unresolved": 2,
    "import/order": [2, { "groups": [["builtin", "external", "internal"]] }]
  }
}
